package ru.ReDcTiOn.RegionName;

import java.io.File;

import org.bukkit.Bukkit;
import org.bukkit.ChatColor;
import org.bukkit.command.Command;
import org.bukkit.command.CommandSender;
import org.bukkit.configuration.file.FileConfiguration;
import org.bukkit.entity.Player;
import org.bukkit.plugin.PluginManager;
import org.bukkit.plugin.java.JavaPlugin;

public class Main extends JavaPlugin
{
	static String region;
	static String not_region;
	static Integer mode;
	static String modeNum;
	static String reload;
	static File message;
    static FileConfiguration messageFile;
	
	public void onEnable()
	{
		loadCfg();
		saveCfg();
		Bukkit.getScheduler().scheduleSyncRepeatingTask(this, new Runnable(), 20, 20);
	}
	
	public void OnDisable(){
		System.out.print("[RegionName] RegionName Disabled!");
	}
	
	public void saveCfg()
	{
		getConfig().set("region",region);
		getConfig().set("not_region",not_region);
		getConfig().set("mode",mode);
		saveDefaultConfig();
	}
	
	public void loadCfg()
	{
		region = getConfig().getString("region").replace('&', 'ยง');
		not_region = getConfig().getString("not_region").replace('&', 'ยง');
		mode = getConfig().getInt("mode");
		checkPlug();
	}
	
	public void checkPlug()
	{
		modeNum = getConfig().getString("mode");
		PluginManager pm = Bukkit.getServer().getPluginManager();
		if (pm.getPlugin("BarAPI") == null) 
		{
			this.getServer().getConsoleSender().sendMessage(ChatColor.AQUA + "}----------RegionNAME INFO----------{");
			this.getServer().getConsoleSender().sendMessage(ChatColor.RED + "BarAPI must be installed!");
			this.getServer().getConsoleSender().sendMessage(ChatColor.RED + "Download it at: http://bit.ly/2xSiOd2");
			this.getServer().getConsoleSender().sendMessage(ChatColor.DARK_GREEN + "Mode is set to ActionBar (1)");
			this.getServer().getConsoleSender().sendMessage(ChatColor.AQUA + "}----------RegionNAME INFO----------{");
			mode = 1; getConfig().set("mode", 1);
		}
		else
		{
			this.getServer().getConsoleSender().sendMessage(ChatColor.AQUA + "}----------RegionNAME INFO----------{");
			this.getServer().getConsoleSender().sendMessage(ChatColor.DARK_GREEN + "BarAPI detected!");
			this.getServer().getConsoleSender().sendMessage(ChatColor.AQUA + "}----------RegionNAME INFO----------{");
		}
	}
	
	@Override
	public boolean onCommand(CommandSender sender, Command command, String label, String[] args) 
	{
	if(command.getName().equalsIgnoreCase("regionname"))
	{
	   Player player = (Player)sender;
		if(!player.hasPermission("regionname.reload")) 
		{
			//player.sendRawMessage(ChatColor.AQUA + "RegionName > " + ChatColor.GRAY + "You do not have permissions.");
			messageFile.getString("NoPerm");
		}
		
		if(args.length == 1)
		{
			if(args[0].equalsIgnoreCase("reload"))
			{
				this.reloadConfig();
				loadCfg();
				player.sendRawMessage(ChatColor.AQUA + "RegionName > " + ChatColor.GRAY + "Config reloaded.");
				return true;
			}
		}
		sender.sendMessage(ChatColor.GOLD + "------ RegionName ------");
		sender.sendMessage(ChatColor.AQUA + "* /rn reload" + ChatColor.GRAY + " - reload configuration.");
		sender.sendMessage(ChatColor.GOLD + "------------------------");
		return true;
	}
	return false;
   }
	
}
